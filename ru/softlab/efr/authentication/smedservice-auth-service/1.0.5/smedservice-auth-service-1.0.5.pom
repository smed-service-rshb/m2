<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ru.softlab.efr.common</groupId>
        <artifactId>efr-parent-pom</artifactId>
        <version>2.2</version>
    </parent>

    <groupId>ru.softlab.efr.authentication</groupId>
    <artifactId>smedservice-auth-service</artifactId>
    <version>1.0.5</version>
    <packaging>pom</packaging>

    <modules>
        <module>auth-service-model</module>
        <module>auth-service-client</module>
        <module>auth-service-app</module>
        <module>auth-service-support</module>
        <module>auth-service-test</module>
        <module>test-apps</module>
    </modules>

    <scm>
        <url>http://git.dos.softlab.ru/SMEDSERVICE/auth-service</url>
        <developerConnection>scm:git:git@git.dos.softlab.ru:SMEDSERVICE/auth-service.git</developerConnection>
        <tag>v1.0.5</tag>
    </scm>

    <pluginRepositories>
        <pluginRepository>
            <id>efr-plugin-repo</id>
            <url>http://coral:18088/repository/efr-common</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>coral</id>
            <name>coral</name>
            <url>http://coral:18088/repository/efr-insurance</url>
        </repository>
    </distributionManagement>

    <properties>
        <efr.utilities.version>3.3.0</efr.utilities.version>
        <efr.settings.version>9.1.0</efr.settings.version>
        <efr.transport.version>4.1.0</efr.transport.version>
        <efr.common.dict.version>1.0.4</efr.common.dict.version>
        <efr.logging.version>3.2.0</efr.logging.version>
        <efr.swagger.codegen.version>2.3.16</efr.swagger.codegen.version>
        <swagger.annotations.version>1.5.16</swagger.annotations.version>
        <swagger-backend-generator.version>1.1.0</swagger-backend-generator.version>
        <sonar.exclusions>**/ru/softlab/efr/services/auth/exchange/model/**, **/*Api.java, **/ru/softlab/efr/services/auth/*Client.java</sonar.exclusions>
        <sonar.jacoco.reportPaths>${project.basedir}/../target/jacoco.exec</sonar.jacoco.reportPaths>
    </properties>

    <repositories>
        <repository>
            <id>coral</id>
            <name>coral</name>
            <url>http://coral:18088/repository/efr</url>
        </repository>
        <repository>
            <id>coral-efr-insurance</id>
            <name>coral-efr-insurance</name>
            <url>http://coral:18088/repository/efr-insurance</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jacoco-init</id>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <append>true</append>
                            <destFile>${sonar.jacoco.reportPaths}</destFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>